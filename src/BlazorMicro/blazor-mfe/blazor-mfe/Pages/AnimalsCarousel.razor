@page "/"

@using Blazorise
@using blazormfe.DTOs

<Container Class="w-100 p-0 m-0" Style="max-width: 3000px">
    <Row Class="w-100 m-0">
        <Column Class="p-0">
            <Carousel @bind-SelectedSlide="@selectedSlide" Interval="4000" ShowIndicators="false" ShowControls="false">
                @if (CarouselPayload != null)
                {
                    selectedSlide = CarouselPayload.AnimalHooks[0].Id;
                    foreach (var animal in CarouselPayload.AnimalHooks)
                    {
                        <AnimalsCarouselSlide Animal="animal" OnAnimalSelected="@CarouselPayload.OnAnimalSelected" SlideName="@animal.Id"/>
                    }
                }
            </Carousel>
        </Column>
    </Row>
</Container>

@code {
    [Parameter]
    public CarouselPayload? CarouselPayload { get; set; }

    private string selectedSlide = null!;
}